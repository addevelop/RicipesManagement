<div class="container mt-5">
    <h1 class="mb-4">Cr√©er une nouvelle recette</h1>
    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
    
    <div class="form-group row">
        {{ form_label(form.title, null, {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
        <div class="col-sm-10">
            {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    
    <div class="form-group row">
        {{ form_label(form.description, null, {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
        <div class="col-sm-10">
            {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <div class="form-group row">
        {{ form_label(form.pictures, null, {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
        <div class="col-sm-10">
            {{ form_widget(form.pictures, {'attr': {'class': 'form-control-file'}}) }}
        </div>
    </div>
    
    <div class="form-group row">
        {{ form_label(form.ingredients, null, {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
        <div class="col-sm-10">
            {{ form_widget(form.ingredients, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    
    <div class="form-group row">
        <div class="col-sm-10 offset-sm-2">
            <button type="submit" class="btn btn-primary">{{ button_label|default('Save') }}</button>
        </div>
    </div>
    
    {{ form_end(form) }}
</div>