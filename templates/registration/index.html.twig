{% extends 'base.html.twig' %}

{% block title %}inscription{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4 text-center">Inscription</h1>
    <div class="col-md-6 offset-md-3">
        {{ form_start(registrationForm, {'attr': {'class': 'form-horizontal'}}) }}
        
        <div class="form-group">
            {{ form_label(registrationForm.email, null, {'label_attr': {'class': 'col-form-label'}}) }}
            {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(registrationForm.email) }}
        </div>
        
        <div class="form-group">
            {{ form_label(registrationForm.password, null, {'label_attr': {'class': 'col-form-label'}}) }}
            {{ form_widget(registrationForm.password, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(registrationForm.password) }}
        </div>
        
        <div class="form-group">
            {{ form_widget(registrationForm.submit, {'attr': {'class': 'btn btn-primary'}}) }}
        </div>
        
        {{ form_end(registrationForm) }}
    </div>
</div>
{% endblock %}
